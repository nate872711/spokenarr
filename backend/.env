# Spokenarr Backend Configuration

# General
APP_NAME=Spokenarr API
APP_ENV=production
APP_PORT=8000

# Database
POSTGRES_USER=spokenarr
POSTGRES_PASSWORD=spokenarr
POSTGRES_DB=spokenarr
POSTGRES_HOST=spokenarr-db
