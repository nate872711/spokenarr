# ---------------------------
# SPOKENARR ENVIRONMENT CONFIG
# ---------------------------

# PostgreSQL settings
POSTGRES_USER=spokenarr
POSTGRES_PASSWORD=spokenarr_pass
POSTGRES_DB=spokenarr

# Full database connection URL
DATABASE_URL=postgresql+asyncpg://spokenarr:spokenarr_pass@spokenarr-db:5432/spokenarr

# External port mappings
API_HOST_PORT=5080
WEB_HOST_PORT=6080

# Frontend config
NODE_ENV=production
VITE_API_BASE_URL=http://spokenarr-api

# Audio & media paths
AUDIO_PATH=/app/audio
COVERS_PATH=/app/covers

# General app metadata
APP_NAME=Spokenarr
APP_ENV=production
